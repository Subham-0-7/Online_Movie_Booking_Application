@model IEnumerable<MovieViewModel>
@using Wipro_OnlineMovieBookingApplication.ViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        padding-top: 80px;
    }

    .panel-primary {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        margin-bottom: 30px;
        animation: fadeIn 1.5s ease-in-out;
    }

    .panel-heading {
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        font-size: 24px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        width: 250px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 12px 24px rgba(0, 0, 0, 0.3);
        }

    .card-header {
        background-color: #3498db;
        color: white;
        padding: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .card-body {
        padding: 15px;
    }

        .card-body p {
            margin: 0 0 10px;
            font-size: 14px;
            color: #333;
        }

    .card-image {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }


    .btn-group {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 20px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1); 
        text-align: center; 
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(45deg, #1abc9c, #16a085);
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #16a085, #1abc9c);
            transform: translateY(-5px); 
        }

    .btn-info {
        background: linear-gradient(45deg, #3498db, #2980b9);
        color: white;
        border: none;
    }

        .btn-info:hover {
            background: linear-gradient(45deg, #2980b9, #3498db);
            transform: translateY(-5px); 
        }

    .btn-danger {
        background: linear-gradient(45deg, #e74c3c, #c0392b);
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background: linear-gradient(45deg, #c0392b, #e74c3c);
            transform: translateY(-5px); 
        }


    h3 {
        padding: 10px;
        color: #333;
        font-size: 14px;
    }

    .in-theaters-title {
        font-size: 2rem; 
        font-weight: bold;
        color: #333; 
        margin-bottom: 1.5rem;
        text-align: center; 
        text-transform: uppercase;
    }
</style>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Movie List</div>
        <hr />
        <div class="panel-body">
            <div class="in-theaters-title">In Theaters</div>
            <div class="card-container">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-header">
                            @item.MovieName
                        </div>
                        <img src="@item.MovieImage" alt="Movie Poster" class="card-image" />
                        <div class="card-body">
                            <p><strong>Synopsis:</strong> @item.Synopsis</p>
                            <p><strong>Director:</strong> @item.Director</p>
                            <p><strong>Duration:</strong> @item.Duration minutes</p>
                            <p><strong>Genre:</strong>@item.Genre</p>
                            <p><strong>Rating:</strong> @item.Rating</p>
                            <hr />
                            <a href="@Url.Action("EditMovies", "Movie", new { id = item.MovieId })" class="btn btn-info">Edit</a>
                            <a href="@Url.Action("DeleteMovies", "Movie", new {id = item.MovieId})" class="btn btn-danger">Delete</a>
                            <hr />
                            <a href="@Url.Action("AddBooking", "Booking", new {id = item.MovieId})" class="btn btn-primary">Book Tickets</a>
                        </div>
                    </div>
                }
                @* <div class="in-theaters-title">Upcoming Movies</div>
                <div class="card-container">
                    <div class="card-header">Venom The Last Dance</div>
                    <img src="https://i.ibb.co/RYWY28X/Venom-The-Last-Dance.png" alt="Movie Poster" class="card-image" />
                    <div class="card-body">
                        <p></p>
                    </div>
                </div> *@
            </div>
        </div>
    </div>
</div>
